<div class="col-xs-12">
  <div class="flex-container">
    <div class="flex-block">

<%# if current_user %>

    <h4>Sign up</h4>

    <div class="well">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, :class => "form-control input-lg" %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", :class => "form-control input-lg" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control input-lg" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", :class => "btn-lg btn-primary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>

    <% else %>
    <br><br>
      <h4>You must be Joshua Rinard to edit this site</h4>

<%# end %>

    </div><!-- flex-block end -->
  </div><!-- flex-container end -->
</div><!-- col end -->
