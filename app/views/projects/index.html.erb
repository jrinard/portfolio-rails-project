<h1>Projects</h1>

<h4>Here are some of my recent projects.</h4>


<div class="well">
  <%# if current_user %>
  <div class="pull-right"><%= link_to "New Project", new_project_path, :class => "btn btn-primary" %></div>
  <%# end %>

  <% if @projects.any? %>
    <% @projects.each  do |project| %>
    <li>Title: <span class="project-text"> <%= project.title %></span></li>
    <li>Description: <span class="project-text"> <%= project.description %></span></li>
    <li><a href="#"><%= project.link %></a></li>
    <hr>

    <% end %>
    <% else %>
      <p>There are no projects</p>
  <% end %>
</div>
